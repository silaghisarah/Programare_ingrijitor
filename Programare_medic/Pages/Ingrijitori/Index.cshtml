@page "{id:int?}"

@model Programare_ingrijitor.Pages.Ingrijitori.IndexModel

@{
    ViewData["Title"] = "Index";
}



<div class="cutie" lass="cutie" data-aos="fade-right" data-aos-duration="2000">
<h1>Lista Ingrijitori</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ingrijitor[0].Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingrijitor[0].Prenume)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

      @foreach (var item in Model.Ingrijitor) 
      {
            <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenume)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
